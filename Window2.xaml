<Window x:Class="Pereverzev_Prac2.Window2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Калькулятор" Height="250" Width="300">
    <Grid>
        <Label Content="Первое число:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0"/>
        <TextBox x:Name="FirstNumberTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Margin="10,30,0,0"/>

        <Label Content="Второе число:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,70,0,0"/>
        <TextBox x:Name="SecondNumberTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Margin="10,90,0,0"/>

        <Label Content="Операция (+, -, *, /):" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,130,0,0"/>
        <TextBox x:Name="OperatorTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Margin="10,150,0,0"/>

        <Button Content="Вычислить" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,180,0,0" Click="CalculateButton_Click"/>

        <Label x:Name="ResultLabel" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,220,0,0" Width="250"/>
        <Button Content="Вернуться" HorizontalAlignment="Left" Height="34" Margin="179,166,0,0" VerticalAlignment="Top" Width="94" Click="Button_Click"/>
    </Grid>
</Window>
