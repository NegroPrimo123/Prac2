<Window x:Class="Pereverzev_Prac2.Window4"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Пароль" Height="234" Width="393">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="285*"/>
            <ColumnDefinition Width="122*"/>
        </Grid.ColumnDefinitions>
        <Label Content="Введите пароль:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0"/>
        <PasswordBox x:Name="PasswordBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Margin="10,30,0,0"/>

        <Button Content="Войти" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,70,0,0" Click="LoginButton_Click"/>

        <Label x:Name="MessageLabel" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,110,0,0" Width="300" Height="50" Grid.ColumnSpan="2"/>
        <Button Content="Вернуться" HorizontalAlignment="Left" Height="34" Margin="275,150,0,0" VerticalAlignment="Top" Width="94" Click="Button_Click" Grid.ColumnSpan="2"/>
    </Grid>
</Window>