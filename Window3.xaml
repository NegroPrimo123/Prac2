<Window x:Class="Pereverzev_Prac2.Window3"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Проверка числового диапазона" Height="250" Width="400">
    <Grid>
        <Label Content="Введите число от 0 до 100:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0"/>
        <TextBox x:Name="InputNumberTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Margin="10,30,0,0"/>

        <Button Content="Проверить" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,70,0,0" Click="CheckButton_Click"/>

        <Label x:Name="ResultLabel" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,110,0,0" Width="350" Height="50"/>
        <Button Content="Вернуться" HorizontalAlignment="Left" Height="34" Margin="266,160,0,0" VerticalAlignment="Top" Width="94" Click="Button_Click"/>
    </Grid>
</Window>
